startup_message off
autodetach on
vbell off
defscrollback 1024
encoding UTF-8
term screen-256color
hardstatus alwayslastline "%{.k} %{..R}%-w%{..g}%n %t%{-}%+w%=  %c:%s  %{..r}%H%{.kw}  "
